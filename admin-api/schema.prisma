// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
  roleId   Int
  role     Role   @relation(fields: [roleId], references: [id])

  auditLogs AuditLog[]

  createdTemplates Template[] @relation("TemplateCreatedBy")
  kbItemsCreated KBItem[] @relation("KBItemCreatedBy")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([roleId])
  @@map("users")
}


model Role {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  description String?
  permissions Permission[]
  users       User[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("roles")
}

model Permission {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  roles       Role[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("permissions")
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  action    String
  entity    String
  entityId  Int
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  oldData   Json?
  newData   Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([userId])
  @@map("audit_logs")
}

enum DocumentType {
  SRS
  API
  DB
  USERFLOWS
}

model Template {
  id            Int          @id @default(autoincrement())
  title         String
  slug          String       @unique
  description   String       @default("")
  html          String
  isPublished   Boolean      @default(false)

  documentType  DocumentType @default(SRS)
  schemaJson    Json?        @map("schema_json")
  promptPresetId Int?
  promptPreset  PromptPreset? @relation(fields: [promptPresetId], references: [id])

  createdById   Int?
  createdBy     User?        @relation("TemplateCreatedBy", fields: [createdById], references: [id])
  
  @@index([createdById])
  @@index([documentType])
  @@index([promptPresetId])

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@map("templates")
}

model ChatSession {
  id            String    @id @default(cuid())
  title         String
  rootNodeId    String?
  currentNodeId String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  nodes         ChatNode[]

  @@index([createdAt])
}

model ChatNode {
  id            String     @id @default(cuid())
  sessionId     String
  session       ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  parentId      String?
  parent        ChatNode?   @relation("ParentChild", fields: [parentId], references: [id])
  children      ChatNode[]  @relation("ParentChild")

  path          String
  depth         Int
  siblingIndex  Int
  label         String?
  promptText    String
  model         String?
  preset        String?
  responseJson  Json?
  responseMd    String?
  meta          Json?
  createdAt     DateTime    @default(now())

  @@index([sessionId, path])
}

model MergeOperation {
  id           String    @id @default(cuid())
  sessionId    String
  targetNodeId String
  baseNodeId   String
  leftNodeId   String
  rightNodeId  String
  strategy     String
  sectionsMap  Json
  conflicts    Json?
  createdAt    DateTime   @default(now())

  @@index([sessionId, createdAt])
}

enum DetailLevel {
  BRIEF
  STANDARD
  DETAILED
}

model PromptPreset {
  id          Int          @id @default(autoincrement())
  name        String
  description String       @default("")
  documentType DocumentType
  systemPrompt String
  userPromptTemplate String // шаблон с плейсхолдерами {concept}, {domain}, {schemaJson}, {detailLevel}, {sectionId}
  isDefault   Boolean      @default(false)
  version     String       @default("v1") // для A/B тестирования: v1, v2, etc.
  
  templates   Template[]
  packages    GeneratedDocPackage[]
  sections    GeneratedDocSection[]
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([documentType])
  @@index([isDefault])
  @@map("prompt_presets")
}

model GeneratedDocPackage {
  id            Int      @id @default(autoincrement())
  concept       String
  domain        String?
  detailLevel   DetailLevel @default(STANDARD)
  promptPresetId Int?
  promptPreset  PromptPreset? @relation(fields: [promptPresetId], references: [id])
  docs          Json
  analyses      AnalysisSnapshot[] @relation("PackageAnalyses")
  sections      GeneratedDocSection[]
  createdAt     DateTime @default(now())

  @@index([promptPresetId])
  @@map("generated_doc_packages")
}

model GeneratedDocSection {
  id            Int      @id @default(autoincrement())
  packageId     Int
  package       GeneratedDocPackage @relation(fields: [packageId], references: [id], onDelete: Cascade)
  documentType  DocumentType
  sectionId     String
  sectionTitle  String
  content       Json
  markdown      String?
  promptPresetId Int?
  promptPreset  PromptPreset? @relation(fields: [promptPresetId], references: [id])
  regeneratedAt DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([packageId])
  @@index([documentType])
  @@index([sectionId])
  @@map("generated_doc_sections")
}

model KBItem {
  id           Int              @id @default(autoincrement())
  title        String
  slug         String           @unique
  summary      String           @default("")
  content      String           @default("")
  domain       String?
  solutionType String?
  techStack    Json?
  createdById  Int?
  createdBy    User?            @relation("KBItemCreatedBy", fields: [createdById], references: [id])

  tags         KBItemTag[]
  categories   KBItemCategory[]

  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  @@map("kb_items")
}

model Tag {
  id     Int        @id @default(autoincrement())
  name   String     @unique
  items  KBItemTag[]

  @@map("tags")
}

model Category {
  id     Int              @id @default(autoincrement())
  name   String           @unique
  items  KBItemCategory[]

  @@map("categories")
}

model KBItemTag {
  kbItemId Int
  tagId    Int
  kbItem   KBItem @relation(fields: [kbItemId], references: [id])
  tag      Tag    @relation(fields: [tagId], references: [id])

  @@id([kbItemId, tagId])
  @@map("kb_item_tags")
}

model KBItemCategory {
  kbItemId   Int
  categoryId Int
  kbItem     KBItem   @relation(fields: [kbItemId], references: [id])
  category   Category @relation(fields: [categoryId], references: [id])

  @@id([kbItemId, categoryId])
  @@map("kb_item_categories")
}

model AnalysisSnapshot {
  id        Int       @id @default(autoincrement())
  concept   String
  domain    String?
  packageId Int?
  package   GeneratedDocPackage? @relation("PackageAnalyses", fields: [packageId], references: [id])
  result    Json
  createdAt DateTime   @default(now())

  @@map("analysis_snapshots")
}
