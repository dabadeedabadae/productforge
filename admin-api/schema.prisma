// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
  roleId   Int
  role     Role   @relation(fields: [roleId], references: [id])

  auditLogs AuditLog[]

  createdTemplates Template[] @relation("TemplateCreatedBy")
  kbItemsCreated KBItem[] @relation("KBItemCreatedBy")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([roleId])
  @@map("users")
}


model Role {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  description String?
  permissions Permission[]
  users       User[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("roles")
}

model Permission {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  roles       Role[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("permissions")
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  action    String
  entity    String
  entityId  Int
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  oldData   Json?
  newData   Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([userId])
  @@map("audit_logs")
}

model Template {
  id          Int       @id @default(autoincrement())
  title       String
  slug        String    @unique
  description String    @default("")
  html        String
  isPublished Boolean   @default(false)

  schemaJson  Json?     @map("schema_json")

  createdById Int?
  createdBy   User?     @relation("TemplateCreatedBy", fields: [createdById], references: [id])
  @@index([createdById])

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("templates")
}
model ChatSession {
  id        Int           @id @default(autoincrement())
  title     String        @default("New chat")
  messages  ChatMessage[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model ChatMessage {
  id        Int        @id @default(autoincrement())
  session   ChatSession @relation(fields: [sessionId], references: [id])
  sessionId Int
  role      String      // "user" | "assistant" | "system"
  content   String
  createdAt DateTime    @default(now())
}
model GeneratedDocPackage {
  id        Int      @id @default(autoincrement())
  concept   String
  domain    String?
  docs      Json     // тут будет весь объект result.docs
  analyses  AnalysisSnapshot[] @relation("PackageAnalyses")
  createdAt DateTime @default(now())
}
model KBItem {
  id           Int              @id @default(autoincrement())
  title        String
  slug         String           @unique
  summary      String           @default("")
  content      String           @default("") // markdown/описание
  domain       String?
  solutionType String?          // например: "auth", "payments", "realtime", "ml", ...
  techStack    Json?            // { backend, frontend, db, services: [...] }
  createdById  Int?
  createdBy    User?            @relation("KBItemCreatedBy", fields: [createdById], references: [id])

  tags         KBItemTag[]
  categories   KBItemCategory[]

  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  @@map("kb_items")
}

model Tag {
  id     Int        @id @default(autoincrement())
  name   String     @unique
  items  KBItemTag[]

  @@map("tags")
}

model Category {
  id     Int              @id @default(autoincrement())
  name   String           @unique
  items  KBItemCategory[]

  @@map("categories")
}

model KBItemTag {
  kbItemId Int
  tagId    Int
  kbItem   KBItem @relation(fields: [kbItemId], references: [id])
  tag      Tag    @relation(fields: [tagId], references: [id])

  @@id([kbItemId, tagId])
  @@map("kb_item_tags")
}

model KBItemCategory {
  kbItemId   Int
  categoryId Int
  kbItem     KBItem   @relation(fields: [kbItemId], references: [id])
  category   Category @relation(fields: [categoryId], references: [id])

  @@id([kbItemId, categoryId])
  @@map("kb_item_categories")
}

model AnalysisSnapshot {
  id        Int       @id @default(autoincrement())
  concept   String
  domain    String?
  packageId Int?
  package   GeneratedDocPackage? @relation("PackageAnalyses", fields: [packageId], references: [id])
  result    Json       // полный JSON ответа анализа (см. ниже формат)
  createdAt DateTime   @default(now())

  @@map("analysis_snapshots")
}
